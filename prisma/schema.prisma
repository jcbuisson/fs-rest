// prisma/schema.prisma

generator client {
   provider = "prisma-client-js"
}

model User {
   id          Int       @default(autoincrement()) @id
   name        String

   posts       Post[]
}

model Post {
   id          Int       @default(autoincrement()) @id
   text        String
   authorId    Int

   author      User      @relation(fields: [authorId], references: [id], onDelete: Cascade)
}

datasource db {
   provider = "postgresql"
   url      = env("DATABASE_URL")
}